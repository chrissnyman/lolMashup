<%= content_for :head do %>
    <title><%= @summoner_name%> | LoL Mashup</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css">
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
<% end %>

<%= content_for :content do %>
    <%= render 'shared/navbar' %>
    <div class="container">
        <div class="jumbotron">

            <div class="row">
                <div class="col-3">
                    <img class="img-fluid" src="http://ddragon.leagueoflegends.com/cdn/11.1.1/img/profileicon/<%= @summoner_data["profileIconId"] %>.png">
                </div>
                <div class="col-9">
                    <h3 class="display-3"><%= @summoner_data["name"] %></h3>
                    <p class="lead"><strong>Level</strong> <%= @summoner_data["summonerLevel"] %></p>

                </div>
            </div>
            <hr class="my-4">
        </div>
        <p>Found mastery for <%= @summoner_champ_masteries.count %> champions:
        <div class="row masteries">

        <table class='table table-hover table-bordered datatable'>
            <thead>
                <tr>
                    <th rowspan="2">Champion</th>
                    <th rowspan="2">Mastery Level</th>
                    <th colspan="3">Mastery Points</th>
                    <th rowspan="2">Chest Granted</th>
                    <th rowspan="2">Tokens Earned</th>
                    <th rowspan="2">Last Play Time</th>
                </tr>
                <tr>
                    <th>Total</th>
                    <th>Since Last Level</th>
                    <th>Until Next Level</th>
                </tr>
            </thead>
            <tbody>
                <% @summoner_champ_masteries.each do |champ_mast| %>
                    <tr>
                        <td><img src="http://ddragon.leagueoflegends.com/cdn/11.1.1/img/champion/<%=champ_mast[:imagename]%>" class="champ-pp "><span class='champ-name'><%= champ_mast[:name] %></span></td>
                        <td class='text-center'><%= champ_mast[:championLevel] %></td>
                        <td class='text-center'><%= champ_mast[:championPoints] %></td>
                        <td class='text-center'><%= champ_mast[:championPointsSinceLastLevel] %></td>
                        <td class='text-center'><%= champ_mast[:championPointsUntilNextLevel] %></td>
                        <td class='text-center'><%= champ_mast[:chestGranted] %></td>
                        <td class='text-center'><%= champ_mast[:tokensEarned] %></td>
                        <td><%= champ_mast[:lastPlayTime].strftime("%Y-%m-%d") %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <script>
        $( document ).ready(function() {
            $('.datatable').dataTable({
                "paging":   false,
                "info":   false,
                "order": [[ 1, "desc" ]],
            });
        });
    </script>
<% end %>
